<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AuthorizationApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/nunito</item>
        <item name="checkboxStyle">@style/App.CheckBox</item>
        <item name="editTextStyle">@style/App.EditText</item>
        <item name="android:textColorLink">@color/white_30</item>
    </style>

    <style name="App.DisabledButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_state_colors</item>
        <item name="android:textColor">@color/button_text_state_colors</item>
    </style>

    <style name="App.EditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHighlight">@color/purple_200</item>
    </style>

    <style name="App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="fontFamily">@font/nunito</item>
    </style>
</resources>